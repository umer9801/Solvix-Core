# MongoDB Connection String
# Get this from MongoDB Atlas or your local MongoDB instance
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/solvixcore?retryWrites=true&w=majority

# Example for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/solvixcore

# Admin Credentials
ADMIN_USER=admin
ADMIN_PASSWORD=admin123

# Email Configuration Options (Choose one or more)

# Option 1: Resend API (Recommended - Easy setup)
RESEND_API_KEY=re_your_api_key_here

# Option 2: EmailJS (Client-side email service)
EMAILJS_SERVICE_ID=service_your_id
EMAILJS_TEMPLATE_ID=template_your_id  
EMAILJS_PUBLIC_KEY=your_public_key

# Option 3: Gmail SMTP (Traditional)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Admin Email
ADMIN_EMAIL=info@solvixcore.com

# Webhook Notifications (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url